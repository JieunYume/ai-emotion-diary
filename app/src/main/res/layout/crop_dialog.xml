<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:layout_marginRight="30dp"
    android:layout_marginLeft="30dp"
    android:background="@drawable/crop_comment"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/bt_cancel"
        android:layout_marginTop="60dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="30dp"

        app:srcCompat="@drawable/cancel" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tv_harvest"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/e"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/poorstory"
                android:text="클릭하여 수확해요!"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                />

            <FrameLayout
                android:id="@+id/e"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/iv_harvest"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@drawable/yellow_circle2"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/iv_crop"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/crop_level1" />
            </FrameLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_crop_level"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0단계"
            android:textStyle="bold"
            android:textColor="#C49561"
            android:textSize="25dp"
            android:textAlignment="center"
            android:fontFamily="@font/poorstory"/>

        <TextView
            android:id="@+id/tv_crop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#616161"
            android:text="씨앗"
            android:textSize="30dp"
            android:textAlignment="center"
            android:fontFamily="@font/poorstory"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="28dp"
            >

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_weight="0.5"
                android:background="@drawable/crop_comment_">

                <TextView
                    android:id="@+id/tv_comment"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/poorstory"
                    android:text="이제 막 씨앗을 뿌렸어요! 성장과정을 함꼐 지켜봐요~"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:textAlignment="center"/>
            </FrameLayout>

            <ImageView
                android:id="@+id/imageView23"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/proud" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>