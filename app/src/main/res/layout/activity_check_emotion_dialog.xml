<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="360dp"
    android:layout_height="150dp"
    android:background="@drawable/round_edge"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp">

        <LinearLayout
            android:id="@+id/bt_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="15dp"
                app:srcCompat="@drawable/cancel" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:fontFamily="@font/poorstory"
            android:text="오늘하루는 어땟나요?" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_happy"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/happy" />

        <ImageView
            android:id="@+id/iv_proud"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/proud" />

        <ImageView
            android:id="@+id/iv_sad"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/sad" />

        <ImageView
            android:id="@+id/iv_angry"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/angry" />

        <ImageView
            android:id="@+id/iv_embressed"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/embarrassed" />

        <ImageView
            android:id="@+id/iv_nervous"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/nervous" />

        <ImageView
            android:id="@+id/iv_wound"
            android:layout_width="65dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/wound" />
    </LinearLayout>

</LinearLayout>