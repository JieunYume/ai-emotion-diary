<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WritingActivity"
    android:background="@drawable/mainframe_simple_no">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/top_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:id="@+id/bt_back"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:gravity="left">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/arrow_back_ios" />
            </LinearLayout>

            <TextView

                android:id="@+id/tv_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"

                android:layout_centerVertical="true"
                android:layout_marginTop="15dp"
                android:layout_weight="8"
                android:fontFamily="@font/poorstory"
                android:gravity="center"
                android:text="오늘의 날짜"
                android:textColor="#999292"
                android:textSize="23dp" />

            <LinearLayout
                android:id="@+id/bt_crop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/check" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="400dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/writting_carrot_comment" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            >

            <EditText
                android:id="@+id/et_happen"
                android:layout_width="370dp"
                android:layout_height="180dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/writting_card"
                android:gravity="top"
                android:paddingTop="20dp"
                android:paddingLeft="20dp"
                android:inputType="textMultiLine"
                android:hint="1. 오늘 어떤 일이 있었나요?"
                android:textColor="#6E5E5E"
                android:scrollHorizontally="false"
                />

            <EditText
                android:layout_marginTop="20dp"
                android:id="@+id/et_emotion"
                android:layout_width="370dp"
                android:layout_height="180dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/writting_card"
                android:gravity="top"
                android:paddingTop="20dp"
                android:paddingLeft="20dp"
                android:inputType="textMultiLine"
                android:hint="2. 어떤 감정과 생각이 들었나요?"
                android:textColor="#6E5E5E"
                android:scrollHorizontally="false"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>